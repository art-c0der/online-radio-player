{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "build/scripts/",
    "watch": true
  },
  "include": ["src/scripts/*"],
  "exclude": ["node_modules", "build"]
}
